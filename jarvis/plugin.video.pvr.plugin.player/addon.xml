<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.pvr.plugin.player"
version="0.0.9"
name="PVR Plugin Player"
provider-name="primaeval">
<requires>
  <import addon="xbmc.python" version="2.20.0"/>
  <import addon="script.module.xbmcswift2" version="2.4.0"/>
  <import addon="script.module.requests" version="2.9.1" />
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.service" library="service.py" start="login"/>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Play Addon Streams from IPTV Simple Client</summary>
  <description lang="en"></description>
  <disclaimer>Based on service.iptvsimple.plugin.player by TheWiz</disclaimer>
</extension>
</addon>
